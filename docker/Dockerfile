# ================================================================
# üöÄ Drone Monitoring System ‚Äî Dockerfile (Poetry Based)
# ================================================================

FROM python:3.11-slim AS base

# System settings
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

# ---------------------------------------------------------------
# üß∞ System Dependencies
# ---------------------------------------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# ---------------------------------------------------------------
# üì¶ Install Poetry
# ---------------------------------------------------------------
ENV POETRY_VERSION=1.7.1
RUN curl -sSL https://install.python-poetry.org | POETRY_VERSION=1.8.2 python3 -

ENV PATH="/root/.local/bin:$PATH"

# Prevent Poetry from creating a virtualenv inside the container
RUN poetry config virtualenvs.create false

WORKDIR /app

# ---------------------------------------------------------------
# üìÑ Copy project metadata
# ---------------------------------------------------------------
COPY pyproject.toml poetry.lock* ./

# ---------------------------------------------------------------
# üîß Install Dependencies
# ---------------------------------------------------------------
RUN poetry install --no-interaction --no-ansi --no-root

# ---------------------------------------------------------------
# üìÅ Copy application code
# ---------------------------------------------------------------
COPY . .

# ---------------------------------------------------------------
# üöÄ Default command (overridden by docker-compose)
# ---------------------------------------------------------------
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
